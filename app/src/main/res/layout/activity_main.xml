<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Main content area with train information (visible by default) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/trainInfoCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:padding="16dp"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Main Train Display Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mainTrainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Train Number -->
                    <TextView
                        android:id="@+id/trainNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Train 1234" />

                    <!-- Status indicator -->
                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#4CAF50"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="On Time" />

                    <!-- Departure and arrival station row -->
                    <TextView
                        android:id="@+id/departureStationText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/arrowIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/trainNumberText"
                        tools:text="Station A" />

                    <TextView
                        android:id="@+id/arrowIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="→"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/departureStationText"
                        app:layout_constraintEnd_toStartOf="@+id/arrivalStationText"
                        app:layout_constraintStart_toEndOf="@+id/departureStationText"
                        app:layout_constraintTop_toTopOf="@+id/departureStationText" />

                    <TextView
                        android:id="@+id/arrivalStationText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/departureStationText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/arrowIcon"
                        app:layout_constraintTop_toTopOf="@+id/departureStationText"
                        tools:text="Station B" />

                    <!-- Time row -->
                    <TextView
                        android:id="@+id/departureText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@+id/timeArrowIcon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/departureStationText"
                        tools:text="12:30" />

                    <TextView
                        android:id="@+id/timeArrowIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="→"
                        android:textSize="24sp"
                        app:layout_constraintBottom_toBottomOf="@+id/departureText"
                        app:layout_constraintEnd_toStartOf="@+id/arrivalText"
                        app:layout_constraintStart_toEndOf="@+id/departureText"
                        app:layout_constraintTop_toTopOf="@+id/departureText" />

                    <TextView
                        android:id="@+id/arrivalText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/departureText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/timeArrowIcon"
                        app:layout_constraintTop_toTopOf="@+id/departureText"
                        tools:text="13:45" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Detailed train information section -->
            <TextView
                android:id="@+id/trainInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="4dp"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/mainTrainCard"
                tools:text="Nearest Station: Central Station\n\nOutbound Train: Express 507 at 12:30\nDestination: North Terminal\n\nReturn Train: Express 508 at 15:45\nDestination: South Terminal" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Fragment container (hidden by default) -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:visibility="gone" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:weightSum="4"> <!-- Changed from 3 to 4 -->

        <Button
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_home"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="Home"
            android:textColor="#333333"
            android:textSize="12sp" />

        <Button
            android:id="@+id/nav_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_location"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="Location"
            android:textColor="#333333"
            android:textSize="12sp" />

        <Button
            android:id="@+id/nav_tickets"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_ticket"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="Tickets"
            android:textColor="#333333"
            android:textSize="12sp" />

        <Button
            android:id="@+id/nav_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_account"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:text="Account"
            android:textColor="#333333"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>